<h2>Add a review for <%= @restaurant.name %></h2>

<%= bootstrap_form_for [@restaurant, @review] do |f| %>
  <%= f.text_area :content %>

  <%= f.select(:rating,
    "<option>0</option>
    <option>1</option>
    <option>2</option>
    <option>3</option>
    <option>4</option>
    <option>5</option>
    ".html_safe) %>

  <%= f.submit "submit", class: "btn btn-success" %>
<% end %>